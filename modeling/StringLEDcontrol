//string LED를 제어하기 위한 코드


#include <FastLED.h>        //아두이노에서 라이브러리 관리 들어가서 검색해서 다운로드 가능

#define LED_PIN 9           //핀번호 9번으로 설정, 가운데 초록색 선을 9번에 연결하면 됨
#define NUM_LEDS 20         //총 사용하는 LED 갯수

CRGB leds[NUM_LEDS];        //LED개수만큼의 배열 생성


void setup() {
  FastLED.addLeds<WS2812, LED_PIN, GRB>(leds, NUM_LEDS);    //배열이랑 설정된 핀번호 연결
}

void loop() {
  char onoff = '0';               //여기도 모터제어처럼 0,1 char 형태로 집어넣으면 됨

  if(Serial.available())
  {
    onoff = Serial.read();

    if (onoff == '0')
    {
      Serial.println("off");
      for (int i = 0; i < 19; i++)
      {
        leds[i] = CRGB(0,0,0);
        
        FastLED.show();
        delay(40);
      }
    }
    else if( onoff == '1')
    {
      Serial.println("on");             // 이 아래 for문으로 LED를 어떻게 켤지 제어 
      for (int i = 0; i < 19; i++)
      {
        leds[i] = CRGB (255,0,0);
        FastLED.show();
        delay(40);
      }
      for (int i = 0; i < 19; i++)
      {
        leds[i] = CRGB(0,0,0);
        
        FastLED.show();
        delay(40);
      }
    }
  }
}
